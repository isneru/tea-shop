<% layout('layouts/boilerplate') %>
<h1>All Products</h1>
<div class="row row-cols-1 row-cols-md-2 g-4 mb-3">
  <% for (let product of products){ %>
  <div class="col">
    <div class="card">
      <img src="<%=product.images[0].cardImage%>" class="card-img-top" alt="" />
      <div class="card-body">
        <h4 class="card-title"><%=product.name%></h4>
        <% if(product.size === 'M' ){ %>
        <h5 class="card-subtitle">Medium</h5>
        <% }else if (product.size === 'L' ){ %>
        <h5 class="card-subtitle">Large</h5>
        <% }else if (!product.size){ %> <% } %>
        <h6 class="card-text">
          <small class="text-muted"><%=product.price%>â‚¬</small>
        </h6>
        <p class="card-text"><%=product.description%></p>
        <a class="btn btn-dark" href="/products/<%=product._id%>"
          >View <%=product.name%></a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>
