<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Product</h1>
  <div class="col-6 offset-3">
    <form
      action="/products/<%=product._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="product[name]"
          value="<%=product.name%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span id="price" class="input-group-text">&euro;</span>
          <input
            class="form-control"
            type="text"
            id="price"
            name="product[price]"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price"
            value="<%=product.price%>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add Image(s)</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="product[description]"
          required
        >
<%=product.description%></textarea
        >
      </div>
      <div class="mb-3"><p>Size</p></div>
      <div class="form-check mb-3">
        <label class="form-check-label" for="sizeM">Medium</label>
        <input class="form-check-input" type="radio" id="sizeM"
        name="product[size]" value="M" <%= product.size === 'M' ? 'checked' : ''
        %> />
      </div>
      <div class="form-check mb-3">
        <label class="form-check-label" for="sizeL">Large</label>
        <input class="form-check-input" type="radio" id="sizeL"
        name="product[size]" value="L" <%= product.size === 'L' ? 'checked' : ''
        %> />
      </div>
      <h4>Delete Images</h4>
      <div class="mb-3 row">
        <% product.images.forEach(function(image, i) {%>
        <div class="col-md-6">
          <img src="<%=image.thumbnail%>" class="img-thumbnail" alt="" />
          <div class="form-check">
            <label for="image-<%=i%>">Delete</label>
            <input
              type="checkbox"
              id="image-<%=i%>"
              name="deleteImages[]"
              value="<%=image.filename%>"
            />
          </div>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-outline-dark">Update Product</button>
      </div>
    </form>
    <div class="mb-3">
      <a class="btn btn-dark" href="/products/<%= product._id%> ">Go Back</a>
    </div>
  </div>
</div>
